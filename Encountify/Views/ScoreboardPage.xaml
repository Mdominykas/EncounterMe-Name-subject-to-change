<?xml version="1.0" encoding="utf-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:Encountify.ViewModels"
    xmlns:model="clr-namespace:Encountify.Models"  
    x:Class="Encountify.Views.ScoreboardPage">

    <ContentPage.BindingContext>
        <viewmodel:ScoreboardPageViewModel />
    </ContentPage.BindingContext>

    <StackLayout>
        <CollectionView ItemsSource="{Binding Scoreboard}">
            <CollectionView.ItemTemplate>

                <DataTemplate>
                    <Grid
                        Padding="10"
                        ColumnDefinitions="Auto,*"
                        RowDefinitions="Auto, *">
                        
                        <Label 
                            Grid.Column="1"
                            FontAttributes="Bold"
                            Text="{Binding Name}"/>
                        <Label
                            Grid.Column="1"
                            Grid.Row="1"
                            FontAttributes="Bold"
                            Text="{Binding Score}"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>
    </StackLayout>
</ContentPage>